<p style="color: green"><%= notice %></p>

<%= render 'post', post: @post %>

<div>
  <%= link_to "Edit this post", edit_post_path(@post) %> |
  <%= link_to 'Back to Home', home_authen_path, class: 'btn btn-secondary' %>
  <%= button_to "Destroy this post", @post, method: :delete, data: { confirm: "Are you sure?" } %>
</div>

<div>
  <h3>Likes: <%= @post.likes %></h3>
  <%= button_to "Like", like_post_path(@post), method: :post, class: "btn btn-success" %>
</div>

<h3>Comments</h3>
<% @post.comments.each_with_index do |comment, index| %>
  <p><%= "#{index + 1}. #{comment.content}" %></p>
<% end %>

<h4>Add a Comment</h4>
<%= form_with(model: [@post, @post.comments.build], local: true) do |form| %>
  <div>
    <%= form.label :content, "Comment" %><br>
    <%= form.text_area :content, rows: 3 %>
  </div>
  <div>
    <%= form.submit "Create Comment", class: "btn btn-primary" %>
  </div>
<% end %>
